{
  "name": "prpl-server",
  "version": "1.0.0",
  "description": "A Node implementation of the PRPL pattern for serving Progressive Web Apps",
  "repository": "git+https://github.com/Polymer/prpl-server-node.git",
  "main": "lib/prpl.js",
  "types": "lib/prpl.d.ts",
  "bin": "bin/prpl-server",
  "engines": {
    "node": ">=6.0"
  },
  "author": "The Polymer Project Authors",
  "license": "BSD-3-Clause",
  "scripts": {
    "build": "rm -Rf lib/ && tsc",
    "build:watch": "tsc --watch",
    "format": "find src -name '*.ts' | xargs clang-format --style=file -i",
    "prepack": "npm run build",
    "prepublishOnly": "npm run test",
    "test": "npm run build && mocha",
    "test:watch": "watchy -w src -- npm run test"
  },
  "devDependencies": {
    "@types/chai": "^4.0.2",
    "@types/mocha": "^2.2.41",
    "chai": "^4.1.1",
    "clang-format": "^1.0.50",
    "mocha": "^4.0.1",
    "source-map-support": "^0.5.0",
    "typescript": "^2.6.1",
    "watchy": "^0.7.0"
  },
  "dependencies": {
    "@types/compression": "0.0.34",
    "@types/express": "^4.0.35",
    "@types/http-errors": "^1.6.1",
    "@types/node": "^8.0.47",
    "@types/send": "^0.14.2",
    "@types/statuses": "^1.3.0",
    "@types/valid-url": "^1.0.2",
    "ansi-escape-sequences": "^4.0.0",
    "browser-capabilities": "^1.0.0",
    "command-line-args": "^4.0.4",
    "command-line-usage": "^4.0.0",
    "compression": "^1.6.2",
    "express": "^4.15.2",
    "http-errors": "^1.6.2",
    "rendertron-middleware": "^0.1.1",
    "statuses": "^1.4.0",
    "send": "^0.16.1",
    "valid-url": "^1.0.9"
  }
}
